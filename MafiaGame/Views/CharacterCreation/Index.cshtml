
@{
    ViewBag.Title = "Character Creation";
}

<form class="form-horizontal">
    <div class="form-group">
        <label for="nameInput" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input id="nameInput" class="form-control" type="text">
        </div>
    </div>

    <div class="form-group">
        <label for="genderInput" class="col-sm-2 control-label">Gender</label>
        <div class="col-sm-10">
            <select id="genderInput" class="form-control">
                <option></option>
                <option>male</option>
                <option>female</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="startingCityInput" class="col-sm-2 control-label">Starting City</label>
        <div class="col-sm-10">
            <select id="startingCityInput" class="form-control">
                <option></option>
                <option>city 1</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Avatar</label>
        <div class="col-sm-10">
            <img src="~/images/avatar.png"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>