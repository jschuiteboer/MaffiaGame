@model MafiaGame.ViewModels.CharacterCreationViewModel

@{
    ViewBag.Title = "Character Creation";
}

@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="nameInput" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group">
        <label for="genderInput" class="col-sm-2 control-label">Gender</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(
                m => m.SelectedGender,
                Model.GenderList,
                "Select",
                new { @class = "form-control" }
            )
            @Html.ValidationMessageFor(m => m.SelectedGender, null, new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group">
        <label for="startingCityInput" class="col-sm-2 control-label">Starting City</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(
                m => m.SelectedStartingCity,
                Model.StartingCities,
                "Select",
                new { @class = "form-control" }
            )
            @Html.ValidationMessageFor(m => m.SelectedStartingCity, null, new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Avatar</label>
        <div class="col-sm-10">
            <img src="~/images/avatar.png" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
}