@model MafiaGame.Models.Map

<svg id="map" class="map" viewBox="-50 -33 100 66" xmlns="http://www.w3.org/2000/svg">
    @foreach (var link in Model.TileLinks)
    {
        <line
            class="tile-link"
            x1="@link.Key.Position.X"
            y1="@link.Key.Position.Y"
            x2="@link.Value.Position.X"
            y2="@link.Value.Position.Y"
            stroke="#000"
            stroke-width="3";
            />
    }

    @foreach (var tile in Model.TileList)
    {
        <circle
            class="tile"
            cx="@tile.Position.X"
            cy="@tile.Position.Y"
            r="3"
            data-tile-name="@tile.Name"
            data-tile-type="@tile.Type"
            />
    }
</svg>