@model MafiaGame.ViewModels.AirportViewModel

@{
    ViewBag.Title = "Travel";
}

@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <div class="col-sm-2">
            <label for="cityInput" class="control-label">City</label>
        </div>
        <div class="col-sm-10">
            @Html.DropDownListFor(
                m => m.SelectedCity,
                Model.Cities,
                "Select",
                new { @id = "cityInput", @class = "form-control" }
            )

            @Html.ValidationMessageFor(m => m.SelectedCity, null, new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Travel</button>
        </div>
    </div>
}
